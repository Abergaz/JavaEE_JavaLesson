<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- обязательный элемент это  xsi:schemaLocation  -->
    <!-- xmlns схемы поверки для нашего XML  -->

    <!-- для настойки JSP используется jsp-config  -->
    <jsp-config>
        <!-- taglib использования библиотеки тегов  -->

        <!-- jsp-property-group настройка группы параметров для конкретной jsp или группы jsp или всех  -->
        <jsp-property-group>
            <!-- указываем к какой jsp относиться настройка, можно ко всем или группе(папке)  -->
            <url-pattern>/jsp/Page.jsp</url-pattern>
            <!-- el-ignored включает или отключает expression language -->
            <el-ignored>false</el-ignored>
            <!-- scripting-invalid вкд.чать/отключать скриптинг на странице -->
            <scripting-invalid>false</scripting-invalid>
            <!-- проверяет jsp на стандарт XML иначе ошибки-->
            <is-xml>false</is-xml>
            <!-- include-prelude страница включается в самое начало  -->
            <include-prelude>/jsp/Header.jsp</include-prelude>
            <!-- include-coda  страница включается в самый конец -->
            <include-coda>/jsp/Footer.jsp</include-coda>
        </jsp-property-group>
    </jsp-config>


</web-app>