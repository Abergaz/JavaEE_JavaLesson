<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- обязательный элемент это  xsi:schemaLocation  -->
    <!-- xmlns схемы поверки для нашего XML  -->

    <!-- можно указать страницу, которая будет отображаться  -->
    <!-- если запос не найден, и HTML код ответа, обычно это 404 -->
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/Error.jsp</location>
    </error-page>
    <!-- можно указать на какую страницк перекидывать в случе програмных ошибок -->
    <!-- причем для разных исключений может быть своя страница -->
    <error-page>
        <exception-type>javax.servlet.ServletException</exception-type>
        <location>/jsp/Error.jsp</location>
    </error-page>
</web-app>